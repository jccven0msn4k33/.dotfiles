remlower() {
  local dry=0
  [[ $1 == --dry-run ]] && { dry=1; shift; }
  (( $# )) || set -- .
  for root in "$@"; do
    find "$root" -depth -print0 | while IFS= read -r -d '' f; do
      d=${f%/*}; n=${f##*/}; lower=${n:l}; dest="$d/$lower"
      [[ $n == "$lower" ]] && continue
      if [[ -e "$dest" ]]; then
        print -r -- "skip: $f -> $dest (exists)"
      else
        (( dry )) && print -r -- "would: mv -n -- $f $dest" || mv -n -- "$f" "$dest"
      fi
    done
  done
}
